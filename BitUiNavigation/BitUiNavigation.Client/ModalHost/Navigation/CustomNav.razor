@inherits TimeWarpStateComponent

<BitStack Horizontal
          HorizontalAlign="BitAlignment.Start"
          Gap=".5rem"
          FitHeight
          FitWidth>
    <BitBadge Hidden="@(NavItem.InvalidCount == 0)"
              Dot
              Size="BitSize.Small"
              Position="BitPosition.CenterEnd"
              Color="BitColor.Error">
        <BitIcon AriaLabel="@NavItem.AriaLabel" Size="BitSize.Medium"
                 IconName="@NavItem.IconName" />
    </BitBadge>
    @if (ShowItemText)
    {
        <BitText Style="white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">
            @NavItem.Text
        </BitText>
    }
</BitStack>
@code {
    [Parameter, EditorRequired] public CustomNavItem NavItem { get; set; } = default!;
    [Parameter, EditorRequired] public bool ShowItemText { get; set; } = false;

// NOTES: We are using a Dot for the badge here because the menu doesn't leave enough room
// for a badge with a counter or an icon at the end.  Space is too tight.
}
